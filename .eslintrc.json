{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["plugin:@next/next/recommended"],
    "overrides": [
        {
            "env": { "node": true },
            "files": [".eslintrc.{js,cjs}"],
            "parserOptions": { "sourceType": "script" }
        }
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@stylistic"],
    "rules": {
        "@stylistic/indent": ["off", 4],
        "@stylistic/quotes": ["warn", "single"],
        "@stylistic/semi": ["error", "never"]
    }
}
